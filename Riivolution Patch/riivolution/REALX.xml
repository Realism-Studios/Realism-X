<wiidisc version="1" shiftfiles="true" root="/REALX" log="true">
	<id game="SMN">
		<region type="P"/>
		<region type="E"/>
		<region type="J"/>
		<region type="K"/>
		<region type="W"/>
	</id>
	<options>
		<section name="REALX">
			<option name="Realism X" id="REALXCore" default="1">
				<choice name="Freely loaded"><patch id="REALXCore"/></choice>
			</option>
			<option name="Load 100% Save" id="REALXSav" default="0">
				<choice name="Freely loaded"><patch id="REALXSav"/></choice>
			</option>
		</section>
	</options>
	<patch id="REALXCore">
		<folder external="Effect" disc="/Effect" />
		<folder external="Env" disc="/Env" create="true" />
		<folder external="Font" />
		<folder external="Layouts" /> <!-- Allows retail LYTs to not need a folder, as well as 'openingTitle' and 'wiiStrap' LYTs to load -->
		<folder external="Layouts" disc="/Layout" create="true" /> <!-- Custom layouts -->
		<folder external="Message" />
		<folder external="Music" disc="/Sound/new" create="true" />
		<folder external="Music/rsar" disc="/Sound" />
		<folder external="Music/sfx" disc="/Sound/new/sfx" create="true" />
		<folder external="Music/stream" disc="/Sound/stream" create="true" />
		<folder external="NewerRes" disc="/NewerRes" create="true" />
		<folder external="Object" disc="/Object" create="true" />
		<folder external="Stage" disc="/Stage" create="true" length="500000" />
		<folder external="Stage/Texture" disc="/Stage/Texture" create="true" length="1000000" />
		<folder external="TitleReplay" disc="/Replay/title" create="true" />
		<folder external="WorldMap" disc="/WorldMap" create="true" />
		<file external="Sample/tobira.bti" disc="/Sample/tobira.bti" create="true" />

		<!-- Inject Newer loader -->
		<!-- EU --> <memory offset="0x80328478" value="80001800" original="8015BC60" />
